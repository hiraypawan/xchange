{
  "manifest_version": 3,
  "name": "Xchangee - Twitter Engagement Automation",
  "version": "1.1.0",
  "description": "Automate Twitter engagement and earn credits with Xchangee platform",
  "update_url": "https://xchangee.vercel.app/api/extension?action=update",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://xchangee.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Xchangee",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}